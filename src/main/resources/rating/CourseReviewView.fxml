<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-padding: 20px; -fx-background-color: linear-gradient(to bottom, #bc9cff, #9434ef);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.learnify.rating.controller.CourseReviewController">
    <children>
        <ComboBox fx:id="courseComboBox" layoutX="95.0" layoutY="29.0" promptText="Select Course" style="-fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-pref-width: 200px;" />

        <TextArea fx:id="reviewTextArea" layoutX="45.0" layoutY="85.0" prefHeight="100" prefWidth="300" promptText="Enter your review..." style="-fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 5px; -fx-padding: 10px;" />

        <Slider fx:id="ratingSlider" blockIncrement="1" layoutX="75.0" layoutY="200.0" majorTickUnit="1" max="5" min="1" minorTickCount="0" prefHeight="57.0" prefWidth="235.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" style="-fx-padding: 10px;" />

        <Label fx:id="starsLabel" layoutX="89.0" layoutY="257.0" prefHeight="27.0" prefWidth="207.0" style="-fx-font-size: 18px; -fx-text-fill: #efc251; -fx-font-weight: bold;" text="★     ★     ★      ★      ★" />

        <!-- Number label for slider value -->
        <Label fx:id="ratingValueLabel" layoutX="320.0" layoutY="200.0" style="-fx-font-size: 16px; -fx-text-fill: black; -fx-font-weight: bold;" />

        <Button layoutX="123.0" layoutY="303.0" onAction="#submitReview" style="-fx-background-color: #bc9cff; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.25), 5, 0, 2, 2);" text="Submit Review" />
    </children>
</AnchorPane>
