<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.layout.StackPane?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.learnify.dashboard.controller.DashboardController" stylesheets="style.css">
    <children>
        <!-- Ligne pour l'icône de profil -->
        <StackPane>
            <ImageView fx:id="imageView" fitHeight="50" fitWidth="50" style="-fx-background-radius: 50%; -fx-border-color: #17091e; -fx-border-width: 4px;" >
                <image>
                    <Image url="@/rating/profile-icon.png" /> <!-- Chemin correct pour l'image -->
                </image>
            </ImageView>
        </StackPane>

        <!-- Première ligne : Graphiques des utilisateurs par rôle et des cours par titre -->
        <HBox spacing="20">
            <!-- Graphique des utilisateurs par rôle -->
            <BarChart fx:id="userBarChart" title="Utilisateurs par Rôle">
                <xAxis>
                    <CategoryAxis label="Rôle"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Nombre d'utilisateurs"/>
                </yAxis>
            </BarChart>

            <!-- Graphique des cours par titre -->
            <BarChart fx:id="courseBarChart" title="Nombre de Cours par Titre">
                <xAxis>
                    <CategoryAxis label="Titre du Cours"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Nombre de Cours"/>
                </yAxis>
            </BarChart>
        </HBox>

        <!-- Deuxième ligne : Graphiques des réponses correctes et des absences -->
        <HBox spacing="20">
            <!-- Graphique des réponses correctes par utilisateur -->
            <BarChart fx:id="correctAnswersBarChart" title="Réponses Correctes par Utilisateur">
                <xAxis>
                    <CategoryAxis label="Nom de l'utilisateur"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Réponses correctes"/>
                </yAxis>
            </BarChart>

            <!-- Graphique des absences par utilisateur -->
            <BarChart fx:id="absenceBarChart" title="Nombre d'Absences par Utilisateur">
                <xAxis>
                    <CategoryAxis label="Nom de l'utilisateur"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Nombre d'absences"/>
                </yAxis>
            </BarChart>
        </HBox>
    </children>
</VBox>
