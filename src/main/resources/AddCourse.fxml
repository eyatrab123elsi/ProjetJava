<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.learnify.cours.controller.CoursController"
            prefWidth="600.0" prefHeight="400.0"
            stylesheets="@style.css">

    <VBox alignment="CENTER" spacing="10" layoutX="50.0" layoutY="20.0">
        <Label text="Gestion des Cours" styleClass="title-label" />

        <TextField fx:id="titreField" promptText="Titre du cours" styleClass="input-field" />
        <TextField fx:id="descriptionField" promptText="Description du cours" styleClass="input-field" />
        <TextField fx:id="dureeField" promptText="Durée (en heures)" styleClass="input-field" />

        <HBox spacing="10">
            <Button text="Ajouter Cours" onAction="#ajouterCours" styleClass="action-button" />
            <Button text="Afficher Tous" onAction="#afficherCours" styleClass="action-button" />
            <Button text="Supprimer Cours" onAction="#supprimerCours" styleClass="delete-button" />
        </HBox>
    </VBox>

    <TableView fx:id="coursTable" layoutX="50.0" layoutY="150.0" prefWidth="500.0" prefHeight="200.0" styleClass="table-view">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50.0" />
            <TableColumn fx:id="colTitre" text="Titre" prefWidth="150.0" />
            <TableColumn fx:id="colDescription" text="Description" prefWidth="200.0" />
            <TableColumn fx:id="colDuree" text="Durée (h)" prefWidth="100.0" />
        </columns>
    </TableView>
</AnchorPane>
