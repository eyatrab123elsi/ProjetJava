<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.learnify.utilisateur.controllers.ProfilController">
    <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" spacing="20.0">
        <Label text="Profil de l'utilisateur" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <!-- Nom -->
        <HBox spacing="10">
            <Label text="Nom:" style="-fx-font-size: 16px;" />
            <Label fx:id="nomLabel" style="-fx-font-size: 16px;" />
        </HBox>

        <!-- Prénom -->
        <HBox spacing="10">
            <Label text="Prénom:" style="-fx-font-size: 16px;" />
            <Label fx:id="prenomLabel" style="-fx-font-size: 16px;" />
        </HBox>

        <!-- Email -->
        <HBox spacing="10">
            <Label text="Email:" style="-fx-font-size: 16px;" />
            <Label fx:id="emailLabel" style="-fx-font-size: 16px;" />
        </HBox>

        <!-- Téléphone -->
        <HBox spacing="10">
            <Label text="Téléphone:" style="-fx-font-size: 16px;" />
            <Label fx:id="telephoneLabel" style="-fx-font-size: 16px;" />
        </HBox>

        <!-- Adresse -->
        <HBox spacing="10">
            <Label text="Adresse:" style="-fx-font-size: 16px;" />
            <Label fx:id="adresseLabel" style="-fx-font-size: 16px;" />
        </HBox>

        <!-- Rôle -->
        <HBox spacing="10">
            <Label text="Rôle:" style="-fx-font-size: 16px;" />
            <Label fx:id="roleLabel" style="-fx-font-size: 16px;" />
        </HBox>

        <!-- Date de naissance -->
        <HBox spacing="10">
            <Label text="Date de naissance:" style="-fx-font-size: 16px;" />
            <Label fx:id="dateNaissanceLabel" style="-fx-font-size: 16px;" />
        </HBox>
    </VBox>
</AnchorPane>