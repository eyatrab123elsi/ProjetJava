<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1">
    <Text text="Modifier votre profil" style="-fx-font-size: 20px;"/>
    <TextField fx:id="nomField" promptText="Nom"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <Button fx:id="modifierButton" text="Modifier" onAction="#modifierProfil"/>
    <Text fx:id="feedbackText" style="-fx-fill: red;"/>
</VBox>
