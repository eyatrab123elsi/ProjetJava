<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.learnify.rating.controller.ReviewController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Titre de la page -->
    <Label text="Ajouter un Avis sur un Cours"
           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-padding: 20;"
           layoutX="20" layoutY="20"/>

    <!-- Conteneur pour centrer la liste déroulante -->
    <VBox alignment="CENTER" spacing="20" layoutX="150" layoutY="70">
        <!-- Liste déroulante pour sélectionner le cours -->
        <ComboBox fx:id="courseDropdown" prefWidth="200.0">
            <items>
                <!-- Les éléments seront ajoutés dynamiquement via le contrôleur -->
            </items>
        </ComboBox>
    </VBox>

    <!-- Conteneur HBox pour centrer les étoiles -->
    <HBox alignment="CENTER" spacing="10" layoutX="20" layoutY="120">
        <Label fx:id="star1" text="☆" style="-fx-cursor: hand; -fx-font-size: 30;"/>
        <Label fx:id="star2" text="☆" style="-fx-cursor: hand; -fx-font-size: 30;"/>
        <Label fx:id="star3" text="☆" style="-fx-cursor: hand; -fx-font-size: 30;"/>
        <Label fx:id="star4" text="☆" style="-fx-cursor: hand; -fx-font-size: 30;"/>
        <Label fx:id="star5" text="☆" style="-fx-cursor: hand; -fx-font-size: 30;"/>
    </HBox>

    <!-- Champ de commentaire -->
    <TextArea fx:id="commentField" layoutX="20" layoutY="170" prefWidth="560" prefHeight="100.0" promptText="Ajoutez un commentaire..."/>

    <!-- Bouton pour envoyer l'avis -->
    <Button text="Envoyer" layoutX="250" layoutY="300" onAction="#handleSubmitAction"/>

</AnchorPane>
